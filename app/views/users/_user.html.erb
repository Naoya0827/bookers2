<h2>User info</h2>
<table class='table'>
  <tr>
    <%= attachment_image_tag user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%>
  </tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>

<div class='row'>
 <% if user.id == current_user.id %>
   <p class="btn btn-outline-secondary btn-block fas fa-user-cog"><%= link_to '', edit_user_path(user) %>
 <% end %>
</div>